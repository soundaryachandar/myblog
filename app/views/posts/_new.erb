<div id="new_post_form">
<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :posttags %><br />
    <%= f.text_field :tag_list %>
  <p>
    <%= f.submit 'Create' %>
 </p>
<% end %>
</div>
<%= link_to 'Back', posts_path %>
